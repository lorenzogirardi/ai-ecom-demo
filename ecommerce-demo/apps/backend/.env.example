# Backend Environment Variables
# Copy this file to .env and update values for your environment

# Application
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
LOG_LEVEL=info

# Database (PostgreSQL)
# For local development with docker-compose:
DATABASE_URL=postgresql://ecommerce:ecommerce_secret@localhost:5432/ecommerce_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret
REDIS_TLS_ENABLED=false

# JWT Authentication
JWT_SECRET=your-development-secret-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS (comma-separated origins, supports wildcards)
CORS_ORIGINS=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Swagger API Docs
ENABLE_SWAGGER=true

# Optional: AWS (for production S3 integration)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=

# Optional: Stripe (for payment integration)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Optional: Email (SMTP)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=

# Optional: Sentry (error tracking)
# SENTRY_DSN=
